<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.exception.findatutor">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- permission required to Send SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:showOnLockScreen="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:targetApi="jelly_bean_mr1">
        <activity
            android:name=".Activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.CardProfile"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.ProfileActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.StudentProfile"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.AboutUs"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.AddaTutor"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.Tutors"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Activities.FullStudentProfileActivityOnNotification"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            tools:ignore="InnerclassSeparator" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB3QvWbxmLsCAfbmEcFHNcy6AxXaEag-qU" />

        <activity
            android:name=".Activities.VerificationActivity"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>