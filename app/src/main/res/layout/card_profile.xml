<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tutor_card_image"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/coverImageView"
                        android:layout_width="157dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:src="@color/cardview_dark_background"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="155dp"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cardprofile_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp"
                            android:text="NAME"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_profile_age_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:text="Age 21"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_profilesubject_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:text="Eng, Maths"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8"
            android:gravity="center|right"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_contact"
                android:layout_width="match_parent"
                android:text="@string/want_to_contact"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvprofile_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17dp"
                android:drawableRight="@drawable/profile_occupation"
                android:text="Company/Occupation"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profile_educationtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tv_profile_education"
                android:layout_marginTop="29dp"
                android:lines="2"
                android:text="Bachelors in Software,"
                android:textColor="@color/torquise" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_profile_educationtext"
                android:drawableRight="@drawable/profile_experience"
                android:text="Experience"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profile_occupationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvprofile_occupation"
                android:text="Exception Startup"
                android:textColor="@color/torquise" />


            <TextView
                android:id="@+id/tv_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tvprofile_city"
                android:layout_marginTop="26dp"
                android:text="Islamabad"
                android:textColor="@color/torquise" />

            <TextView
                android:id="@+id/tv_profile_expereinceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_profile_educationtext"
                android:layout_marginTop="24dp"
                android:text="Worked as a teacher in school"
                android:textColor="@color/torquise" />

            <TextView
                android:id="@+id/tv_profile_feeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView16"
                android:layout_marginTop="24dp"
                android:text="2000-3000"
                android:textColor="@color/torquise" />


            <TextView
                android:id="@+id/tv_profile_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_profile_city"
                android:layout_marginTop="11dp"
                android:drawableRight="@drawable/profile_education"
                android:text="Education"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvprofile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_profile_occupationText"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/profile_city"
                android:text="City"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_profile_expereinceText"
                android:layout_marginTop="11dp"
                android:drawableRight="@drawable/profile_money"
                android:text="Charges"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

